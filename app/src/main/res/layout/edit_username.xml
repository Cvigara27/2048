<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/saveUsername"
        android:background="@drawable/save_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <EditText
            android:id="@+id/editingUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/khmenu"/>

        <Button
            android:id="@+id/savingUsername"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/editingUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:fontFamily="@font/khmenu"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:onClick="updateData"/>

        <Button
            android:id="@+id/cancelingUsername"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editingUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Cancel"
            android:fontFamily="@font/khmenu"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:onClick="cancelUpdating"/>
    </RelativeLayout>
</LinearLayout>